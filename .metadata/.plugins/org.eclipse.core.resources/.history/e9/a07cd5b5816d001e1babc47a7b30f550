package com.latihan;

public class LatihanVariable {
	public static void main(String[] args) {
		// membuat variable
		String name = "Sugilar";
		
		int num = 200;
		
		final int number = 100;
		
		// membuat tipe data number
		byte myByte = 127;
		short myshort = 32000;
		int myInt = 2000000000;
		long myLong = 9000000000000000000L;
		float myFloat = 90.95f;
		double myDouble = 9087.874923874932478d;
		
		//konversi otomati
		int kon = myByte ;
		
		// konversi manual
		int konversiFloat = (int) myFloat;
		
		// tipe data array
		String[] nama;
		nama = new String[]{
			"Tomat", "Cabe", "Singkong", "salada"
		};
		
		// akses array
		String pick = nama[0];
		System.out.println(pick);
		
		// merubah data array 
		String change = nama[2] = "Kelapa";
		System.out.println(change);
		
		
		
	
	}
}
